<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Entertainment">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Button Text="Netflix" HeightRequest="100" WidthRequest="50" BackgroundColor="LightBlue" Clicked="Button_Clicked"/>
            </StackLayout>

            <StackLayout>
                <Button Text="Youtube" HeightRequest="100" WidthRequest="50" BackgroundColor="LightBlue" Clicked="Button_Clicked_1"/>
            </StackLayout>

            <StackLayout>
                <Button Text="Amazon Prime" HeightRequest="100" WidthRequest="50" BackgroundColor="LightBlue" Clicked="Button_Clicked_2"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>